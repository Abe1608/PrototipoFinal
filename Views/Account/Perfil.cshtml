@model PrototipoFinal.ViewModels.PerfilViewModel
@{
    ViewBag.Title = "Mi perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4  profile-container ">
    <h2 class="mb-4">Mis datos</h2>

    @using (Html.BeginForm("Perfil", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <div class="card shadow-sm profile-card">
            <div class="card-body">
                <h5 class="card-title mb-3">Información personal</h5>

                <div class="row g-3">
                    <div class="col-md-3 text-center">
                        @{
                            var foto = string.IsNullOrEmpty(Model.FotoPerfilUrl)
                                ? Url.Content("~/images/profile_default.png")
                                : Url.Content(Model.FotoPerfilUrl);
                        }
                        <img src="@foto" alt="Foto de perfil" class="profile-avatar mb-2" />
                    </div>

                    <div class="col-md-9">
                        <label class="form-label">Cambiar foto de perfil</label>
                        @Html.TextBoxFor(m => m.FotoArchivo,
                            new { type = "file", @class = "form-control", accept = "image/*" })
                        @Html.ValidationMessageFor(m => m.FotoArchivo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <hr class="my-4" />


                <div class="row g-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.NombreCompleto, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "form-control", placeholder = "Nombre y apellidos" })
                        @Html.ValidationMessageFor(m => m.NombreCompleto, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Telefono, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "+503 1234 5678" })
                        @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                    </div>

                </div>

                <hr class="my-4" />

                <h5 class="card-title mb-3">Dirección principal de envío</h5>

                <div class="row g-3">
                    <div class="col-12">
                        @Html.LabelFor(m => m.DireccionLinea1, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.DireccionLinea1, new { @class = "form-control", placeholder = "Calle, número, colonia/barrio" })
                        @Html.ValidationMessageFor(m => m.DireccionLinea1, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-12">
                        @Html.LabelFor(m => m.DireccionLinea2, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.DireccionLinea2, new { @class = "form-control", placeholder = "Apartamento, referencia (opcional)" })
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Ciudad, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Ciudad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Ciudad, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Departamento, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Departamento, new { @class = "form-control" })
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Pais, new { @class = "form-label" })

                        @Html.DropDownListFor(m => m.Pais,
                            new SelectList(new[]
                            {
                                new { Value = "El Salvador (+503)", Text = "El Salvador (+503)" },
                                new { Value = "México (+52)",      Text = "México (+52)" },
                                new { Value = "Estados Unidos (+1)", Text = "Estados Unidos (+1)" },
                                new { Value = "España (+34)",      Text = "España (+34)" },
                                new { Value = "Costa Rica (+506)", Text = "Costa Rica (+506)" },
                                new { Value = "Guatemala (+502)",  Text = "Guatemala (+502)" },
                                new { Value = "Honduras (+504)",   Text = "Honduras (+504)" }

                            },
                            "Value", "Text", Model.Pais),
                            "Selecciona un país",
                            new { @class = "form-select" }
                        )

                        @Html.ValidationMessageFor(m => m.Pais, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-4">
                        @Html.LabelFor(m => m.CodigoPostal, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CodigoPostal, new { @class = "form-control" })
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <a href="@Url.Action("MiPerfil", "Account")" class="btn btn-secondary">
                        Cancelar
                    </a>

                    <button type="submit" class="btn btn-dark">
                        Guardar cambios
                    </button>
                </div>

            </div>
        </div>
    }


</div>

