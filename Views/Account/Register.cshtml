@model PrototipoFinal.Models.Usuarios

@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="h4 fw-bold mb-3">Crear cuenta</h1>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger mb-2" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.nombre_usuario, "Nickname", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.nombre_usuario, new { @class = "form-control", placeholder = "Escribe tu usuario" })
                        @Html.ValidationMessageFor(m => m.nombre_usuario, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.nombre_completo, "Nombre Completo", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.nombre_completo, new { @class = "form-control", placeholder = "Tu nombre completo" })
                        @Html.ValidationMessageFor(m => m.nombre_completo, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.email, "Email", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", type = "email", placeholder = "tucorreo@ejemplo.com" })
                        @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Password", "Contraseña", new { @class = "form-label" })
                        @Html.Password("Password", null, new { @class = "form-control", placeholder = "Mínimo 6 caracteres" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("ConfirmPassword", "Confirmar contraseña", new { @class = "form-label" })
                        @Html.Password("ConfirmPassword", null, new { @class = "form-control", placeholder = "Repite la contraseña" })
                    </div>

                    <button type="submit" class="btn btn-dark w-100">Crear cuenta</button>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="text-center mt-3">
                    ¿Ya tienes cuenta? <a href="@Url.Action("Login","Account", new { returnUrl = ViewBag.ReturnUrl })">Inicia sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>
