
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="h4 fw-bold mb-3">Iniciar sesión</h1>
                @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>
                    if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger py-2">Credenciales inválidas. Intenta de nuevo.</div>
                    }
                    <button class="btn btn-dark w-100" type="submit">Entrar</button>
                }
                <div class="text-center mt-3">
                    ¿No tienes cuenta? <a href="@Url.Action("Register","Account", new { returnUrl = ViewBag.ReturnUrl })">Regístrate</a>
                </div>
            </div>
        </div>
    </div>
</div>
