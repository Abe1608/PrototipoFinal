@model IEnumerable<PrototipoFinal.ViewsModels.DestacadosViewModel>
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- HERO -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center g-4">

            <div class="col-md-6">
                <h1 class="display-5 fw-bold">
                    Ropa deportiva que rinde al ritmo de tu entrenamiento
                </h1>
                <p class="lead text-muted">
                    Tecnología DryFit, diseños ligeros y precios pensados para estudiantes y atletas urbanos.
                </p>
                <div class="d-flex gap-3 mt-3">
                    <a href="@Url.Action("Index","Productos")" class="btn btn-dark btn-lg">
                        Ver catálogo
                    </a>
                    <a href="#destacados" class="btn btn-outline-dark btn-lg">
                        Ofertas destacadas
                    </a>
                </div>
            </div>

            <div class="col-md-6">
                
                <div id="heroCarousel" class="carousel slide shadow rounded-4 overflow-hidden" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://images.unsplash.com/photo-1571731956672-ac8e6b1c0973?q=80&w=1200&auto=format&fit=crop"
                                 class="d-block w-100" alt="Conjunto deportivo">
                            <div class="carousel-caption d-none d-md-block text-start">
                                <h5>Conjuntos para entrenamiento</h5>
                                <p>Combina comodidad y estilo en cada sesión.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1526402461234-4f3b3c2c2a1a?q=80&w=1200&auto=format&fit=crop"
                                 class="d-block w-100" alt="Calzado deportivo">
                            <div class="carousel-caption d-none d-md-block text-start">
                                <h5>Calzado para alto rendimiento</h5>
                                <p>Estabilidad y soporte para tus mejores marcas.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1599058945522-28d584b6f0ff?q=80&w=1200&auto=format&fit=crop"
                                 class="d-block w-100" alt="Leggings FitStyle">
                            <div class="carousel-caption d-none d-md-block text-start">
                                <h5>Prendas FitStyle</h5>
                                <p>Ideal para gym, running o uso diario.</p>
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                </div>
            </div>

        </div>
    </div>
</section>

<section id="destacados" class="py-5 bg-white">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h3 fw-bold mb-0">Destacados</h2>
            <a href="@Url.Action("Index","Productos")" class="text-decoration-none">
                Ver todo
            </a>
        </div>

        <div class="row g-3">
            @foreach (var p in Model)
            {
                @Html.Partial("~/Views/Shared/_ProductoCard.cshtml", p)
            }
        </div>
    </div>
</section>

