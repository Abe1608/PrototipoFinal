@model IEnumerable<PrototipoFinal.ViewModels.CarritoViewModel>

<div class="offcanvas offcanvas-end"
     tabindex="-1"
     id="carritoOffcanvas"
     data-bs-scroll="true"
     data-bs-backdrop="true"
     aria-labelledby="carritoOffcanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="carritoOffcanvasLabel">Tu carrito</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>

    <div class="offcanvas-body d-flex flex-column">
        @{
            decimal total = 0M;
            if (Model != null && Model.Any())
            {
                total = Model.Sum(x => x.Subtotal);
            }
        }

        @if (Model == null || !Model.Any())
        {
            <p class="text-muted">Tu carrito esta vacio.</p>
        }
        else
        {
            <div class="list-group mb-3">
                @foreach (var item in Model)
                {
                    <div class="list-group-item d-flex gap-2">

                        <img src="@item.Imagen"
                             style="width:48px;height:48px;object-fit:cover;border-radius:6px;"
                             alt="@item.Nombre" />

                        <div class="flex-grow-1">
                            <div class="fw-semibold">@item.Nombre</div>
                            <div class="small text-muted">
                                @item.Precio.ToString("0.00") x @item.Cantidad =
                                <strong>@item.Subtotal.ToString("0.00")</strong>
                            </div>
                        </div>

                        <div class="d-flex align-items-center gap-2">

                            <button class="btn btn-sm btn-outline-secondary btn-qty-minus"
                                    type="button"
                                    data-idinventario="@item.IdInventario">
                                â€“
                            </button>

                            <span class="mx-2">@item.Cantidad</span>

                            <button class="btn btn-sm btn-outline-secondary btn-qty-plus"
                                    type="button"
                                    data-idinventario="@item.IdInventario">
                                +
                            </button>

                            <button class="btn btn-sm btn-link text-danger btn-remove-item"
                                    type="button"
                                    data-iddetalle="@item.IdDetalle">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                }

            </div>

            <div class="mt-auto border-top pt-3">
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-semibold">Total</span>
                    <span class="fw-bold">$@total.ToString("0.00")</span>
                </div>
                <a href="@Url.Action("Pagar", "Checkout")"
                   class="btn btn-dark w-100">
                    Proceder a pagar
                </a>
            </div>
        }
    </div>
</div>
