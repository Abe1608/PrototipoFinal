
@model PrototipoFinal.Models.Productos
@{
    ViewBag.Title = "Detalles de producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row g-4">
    <div class="col-md-6">
        <img src="@Model.url_imagen_principal"
             class="img-fluid rounded-4 shadow-sm"
             alt="@Model.nombre_producto" />
    </div>

    <div class="col-md-6">
        <div class="text-muted small">
            @Model.Categorias?.nombre_categoria
        </div>

        <h1 class="h4 fw-bold mb-1">@Model.nombre_producto</h1>

        <div class="fw-bold fs-4">
            $@Model.precio.ToString("0.00")
        </div>

        @if (!string.IsNullOrEmpty(Model.descripcion_larga))
        {
            <p class="mt-3 text-muted">@Model.descripcion_larga</p>
        }
        else if (!string.IsNullOrEmpty(Model.descripcion_corta))
        {
            <p class="mt-3 text-muted">@Model.descripcion_corta</p>
        }

        <div class="d-flex gap-2 mt-4">
            <button class="btn btn-dark"
                    type="button"
                    data-addcart='{"Id": @Model.id_producto, "Nombre":"@Model.nombre_producto", "Precio": @Model.precio, "Imagen":"@Model.url_imagen_principal"}'>
                Agregar al carrito
            </button>

            <a class="btn btn-outline-secondary"
               href="@Url.Action("Index","Productos")">
                Volver al cat√°logo
            </a>
        </div>
    </div>
</div>
