
@model Prototipado.Models.ProductoVM
@{
  ViewBag.Title = "Detalles de producto";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row g-4">
  <div class="col-md-6">
    <img src="@Model.Imagen" class="img-fluid rounded-4 shadow-sm" alt="@Model.Nombre" />
  </div>
  <div class="col-md-6">
    <div class="text-muted small">@Model.Marca</div>
    <h1 class="h4 fw-bold mb-1">@Model.Nombre</h1>
    <div class="fw-bold fs-4">$@Model.Precio</div>
    <p class="mt-3 text-muted">@Model.Descripcion</p>

    @if (Model.Colores != null && Model.Colores.Any()) {
      <div class="mt-3">
        <div class="fw-semibold">Colores</div>
        <div class="d-flex flex-wrap gap-2 mt-1">
          @foreach (var c in Model.Colores) { <span class="badge bg-light text-dark border">@c</span> }
        </div>
      </div>
    }

    @if (Model.Tallas != null && Model.Tallas.Any()) {
      <div class="mt-3">
        <div class="fw-semibold">Tallas</div>
        <div class="d-flex flex-wrap gap-2 mt-1">
          @foreach (var t in Model.Tallas) { <span class="badge bg-light text-dark border">@t</span> }
        </div>
      </div>
    }

    <div class="d-flex gap-2 mt-4">
      <button class="btn btn-dark"
              data-addcart='{"Nombre":"@Model.Nombre","Precio":@Model.Precio,"Imagen":"@Model.Imagen"}'>
        Agregar al carrito
      </button>
      <a class="btn btn-outline-secondary" href="@Url.Action("Index","Productos")">Volver al cat√°logo</a>
    </div>
  </div>
</div>
